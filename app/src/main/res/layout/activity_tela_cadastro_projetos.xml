<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    tools:context=".TelaCadastroProjetos">

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Cadastro de Projeto"
        android:inputType="textPersonName"
        android:textColor="@color/colorPrimaryCadastro"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/Nomeprojeto"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:layout_editor_absoluteX="32dp" />

    <EditText
        android:id="@+id/editTextTextPersonName2"
        android:layout_width="420dp"
        android:layout_height="56dp"
        android:ems="10"
        android:hint="Cidadeprojeto"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/spinnerEstado"
        app:layout_constraintTop_toBottomOf="@+id/Nomeprojeto"
        tools:layout_editor_absoluteX="0dp" />

    <Spinner
        android:id="@+id/spinnerEstado"
        android:layout_width="104dp"
        android:layout_height="42dp"
        android:autofillHints="Estadoprojeto"
        android:entries="@array/estados"
        app:layout_constraintBottom_toTopOf="@+id/Descricao"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName2"
        tools:layout_editor_absoluteX="7dp" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/Nomeprojeto"
        android:layout_width="421dp"
        android:layout_height="52dp"
        android:hint="Nome do Projeto"
        android:textColor="@color/colorAccentCadastro"
        app:layout_constraintBottom_toTopOf="@+id/editTextTextPersonName2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName" />

    <EditText
        android:id="@+id/Descricao"
        android:layout_width="406dp"
        android:layout_height="51dp"
        android:ems="10"
        android:hint="Descrição"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.564" />

    <Button
        android:id="@+id/botaoCadastrar2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cadastrar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.868" />

</androidx.constraintlayout.widget.ConstraintLayout>